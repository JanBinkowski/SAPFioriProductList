<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="sap.training.odatatest1.controller.addProductForm">
	<App>
		<pages>
			<Page xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" title="Adding Product Form" showNavButton="true"
				navButtonPress="action" action:wiring="\{'navButtonPress':\{'navigation':\{'routeName':'Main'\}\}\}">
				<content>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer title="Insert new product">
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="Product ID">
										<sap.ui.layout.form:fields>
											<Input width="100%" id="newProductId" placeholder="ID" type="Number"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="Product Name">
										<sap.ui.layout.form:fields>
											<Input width="100%" id="newName" placeholder="Name"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="Product Description">
										<sap.ui.layout.form:fields>
											<Input width="100%" id="newDescription" placeholder="Description"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="Product Rating">
										<sap.ui.layout.form:fields>
											<Input width="100%" id="newRating" placeholder="Rating" type="Number"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="Product Price">
										<sap.ui.layout.form:fields>
											<Input width="100%" id="newPrice" placeholder="Price" type="Number"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
						</sap.ui.layout.form:layout>
					</sap.ui.layout.form:Form>
				</content>
				<headerContent>
					<Button xmlns="sap.m" text="Add Product" id="button1" press="addProduct" icon="sap-icon://accept"/>
				</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>